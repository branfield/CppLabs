#include <iostream>
#include <fstream>
using namespace std;

int main()
{
	char buff[255];
	setlocale(0, "");
	ifstream fin;
	fin.open("file.txt");
	int *odd = new int[255]; //нечетные
	int *even = new int[255]; //четные
	if (fin)
	{
		while (!fin.eof())
		{
			fin.getline(buff, 255);
			char* tmp = buff;
			int *mas = new int[50];
			for (int i = 0; i < 50; i++)
			{
				int a = atoi(tmp);
				for (int i = 0; i < 255; i++)
				{
					if (a % 2 == 0) odd[i] = a;
					else even[i] = a;
				}
			}
		}
		fin.close();
	}
	else cout << "Файл не существует" << endl;

	for (int i = 0; i < 255; i++)
	{
		cout << odd[i] << " ";
	}

	for (int i = 0; i < 255; i++)
	{
		cout << even[i] << " ";
	}
	system("pause");
	return 0;
}
