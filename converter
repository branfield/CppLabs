#include<iostream>
#include<string>
#include<string.h>
#include<math.h>
#include<stdlib.h>
using namespace std;

string translatorToHex(unsigned long long a)
{
	int rem = 0;
	double ned = 0;
	int *mas = new int[12];
	int j = 0;
	while(a > 0)
	{
		ned = floor( a / 16);
		rem = a - (ned * 16);
		a = ned;
		mas[j] = rem;
		j++;
	}
	string hex = "";
	for (int i = j-1; i >= 0; i--)
	{
		if (mas[i] < 10) hex += to_string(mas[i]);
		else if (mas[i] >= 10 && mas[i] < 16) 
			switch (mas[i])
			{
			case 10: hex += "A";
				break;
			case 11: hex += "B";
				break;
			case 12: hex += "C";
				break;
			case 13: hex += "D";
				break;
			case 14: hex += "E";
				break;
			case 15: hex += "F";
				break;
			}
	}
	return hex;
}

unsigned long long crc8(string s)
{
	int r = 0x00;
	for (int i=0; i<s.length();i++)
	{
		string c = s.substr(s.length()-1-i,1);
 
		int x = atoi(c.c_str())^r;
 
		r = 0x00;
 
		if (x&0x01) { r^= 0x5E; }
		if (x&0x02) { r^= 0xBC; }
		if (x&0x04) { r^= 0x61; }
		if (x&0x08) { r^= 0xC2; }
		if (x&0x10) { r^= 0x9D; }
		if (x&0x20) { r^= 0x23; }
		if (x&0x40) { r^= 0x46; }
		if (x&0x80) { r^= 0x8C; }
	}
 
	return r;
}

int main()
{
	unsigned long long dec;
	setlocale(0, "");
	cout << "Исходное число: ";
	// cin >> dec;
	dec = 123456789012;
	int bite2 = 0, bite3 = 0;
	bite3 = dec % 100000;
	bite2 = (dec / 100000) % 1000;
	string dec1;
	dec1 = to_string(bite2) + to_string(bite3);	
	cout << "Без первого байта: " << dec1 << endl;
	string hex;
	hex = translatorToHex(bite2)+translatorToHex(bite3);

	while (hex.length() < 8) 
	{
		hex = "0" + hex;
	}

	cout << "Шестнадцатиричная система: " << hex << endl; 
	string code;
	int crc;
	unsigned long long crc1;
	crc = crc8(dec1);
	cr1 = translatorToHex((unsigned long long)crc);
	cout << "Контрольная сумма: " << crc1 << endl;
	code = crc1 + hex + "01"; 
	cout << "Полученный код: " << code << endl;
	system("pause");
}
